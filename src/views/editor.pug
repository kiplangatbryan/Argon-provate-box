extends layouts/main.pug
block content
    include layouts/top-bar.pug
    .hero-section 
        .rim1 
            .text-h1 Stuni Manager
            .text-1 Analyse how each track performs
        .img 
            img(src="/images/locate.svg", alt="")


    .text-h1.m-3 Track perfomance
